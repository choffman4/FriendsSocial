@inject Services.TokenService TokenService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<MudDialog>
    <DialogActions>
        <MudButton OnClick="Cancel">No</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Yes</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private Services.CustomAuthStateProvider CustomAuthState
    => AuthStateProvider as Services.CustomAuthStateProvider;


    async void Submit()
    {
        CustomAuthState.MarkUserAsAuthenticated();
        await TokenService.ClearExpiredDataAsync(); // Assuming this method will clear the token and userGuid
        

        NavigationManager.NavigateTo("/"); // Redirect to login or any other page
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();
}
